}

<h2>@ViewBag.Title</h2>


<p>
    @Html.ActionLink("Create New", "Create")
    @*Add search and filter*@
    @using (Html.BeginForm("SearchDeptByInstructor", "Department", FormMethod.Get))
    {
    <p>
        Instructor LName: @Html.DropDownList("instName", "All")
        Department Name: @Html.DropDownList("deptName", "All")
        <input type="submit" value="Filter" />

    </p>
    }

